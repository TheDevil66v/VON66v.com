        function generateMovie() {
            const btn = document.getElementById('movieBtn');
            const display = document.getElementById('videoDisplay');
            const placeholder = document.getElementById('placeholder');
            const loading = document.getElementById('loading');
            const content = document.getElementById('videoContent');
           
            btn.disabled = true;
            placeholder.style.display = 'none';
            content.classList.remove('active');
            loading.style.display = 'block';
           
            logContent('Generating cinematic movie content...');
           
            setTimeout(() => {
                const movie = movies[Math.floor(Math.random() * movies.length)];
                loading.style.display = 'none';
               
                content.style.background = `linear-gradient(135deg, ${movie.color}22 0%, #000 100%),
                    radial-gradient(circle at 50% 50%, ${movie.color}44 0%, transparent 70%)`;
                content.innerHTML = `
                    <div style="font-size: 120px; opacity: 0.3; position: absolute; top: 50%; left: 50%; transform: translate(-50%, -50%);">
                        ${movie.emoji}
                    </div>
                    <div class="video-overlay">
                        <h4>${movie.title}</h4>
                        <p>${movie.genre} ‚Ä¢ 2h 15m ‚Ä¢ 4K HDR</p>
                    </div>
                    <div style="position: absolute; top: 20px; right: 20px; background: rgba(255,0,0,0.8); padding: 5px 15px; border-radius: 5px; font-size: 12px; font-weight: bold;">
                        ‚óè LIVE RENDER
                    </div>
                `;
                content.classList.add('active');
               
                logContent(`Movie generated: ${movie.title} [${movie.genre}]`);
                btn.disabled = false;
            }, 2000);
        }

        function generateRandom() {
            const btn = document.getElementById('randomBtn');
            const display = document.getElementById('videoDisplay');
            const placeholder = document.getElementById('placeholder');
            const loading = document.getElementById('loading');
            const content = document.getElementById('videoContent');
           
            btn.disabled = true;
            placeholder.style.display = 'none';
            content.classList.remove('active');
            loading.style.display = 'block';
           
            logContent('Generating random video content...');
           
            setTimeout(() => {
                const video = randomVideos[Math.floor(Math.random() * randomVideos.length)];
                loading.style.display = 'none';
               
                content.style.background = `linear-gradient(45deg, ${video.color}33 0%, #1a1a2e 100%)`;
                content.innerHTML = `
                    <div style="font-size: 100px; animation: float 3s ease-in-out infinite;">
                        ${video.emoji}
                    </div>
                    <div class="video-overlay">
                        <h4>${video.title}</h4>
                        <p>${video.type} ‚Ä¢ 5:00 ‚Ä¢ HD</p>
                    </div>
                    <div style="position: absolute; top: 20px; left: 20px; background: rgba(255,255,255,0.1); padding: 10px; border-radius: 10px;">
                        <div style="width: 200px; height: 4px; background: rgba(255,255,255,0.2); border-radius: 2px; overflow: hidden;">
                            <div style="width: 0%; height: 100%; background: ${video.color}; animation: progress 5s linear;"></div>
                        </div>
                    </div>
                `;
                content.classList.add('active');
               
                logContent(`Random video generated: ${video.title} [${video.type}]`);
                btn.disabled = false;
            }, 1500);
        }

        function logContent(message) {
            const log = document.getElementById('contentLog');
            const time = new Date().toLocaleTimeString();
            log.innerHTML += `> [${time}] ${message}<br>`;
            log.scrollTop = log.scrollHeight;
        }

        // Particle System
        function createParticles() {
            const container = document.getElementById('particles');
            const particleCount = 50;
           
            for (let i = 0; i < particleCount; i++) {
                const particle = document.createElement('div');
                particle.className = 'particle';
                particle.style.left = Math.random() * 100 + '%';
                particle.style.animationDelay = Math.random() * 15 + 's';
                particle.style.animationDuration = (Math.random() * 10 + 10) + 's';
                particle.style.opacity = Math.random() * 0.5 + 0.1;
                container.appendChild(particle);
            }
        }

        // Smooth Scroll
        document.querySelectorAll('a[href^="#"]').forEach(anchor => {
            anchor.addEventListener('click', function (e) {
                e.preventDefault();
                const target = document.querySelector(this.getAttribute('href'));
                if (target) {
                    target.scrollIntoView({ behavior: 'smooth', block: 'start' });
                }
            });
        });

        // Add progress animation style
        const style = document.createElement('style');
        style.textContent = `
            @keyframes progress {
                from { width: 0%; }
                to { width: 100%; }
            }
        `;
        document.head.appendChild(style);
    </script>
